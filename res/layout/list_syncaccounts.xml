<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >

    <ImageView
        android:id="@+id/img_account_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
         />
    
    <TextView 
        android:id="@+id/text_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_account_icon"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_loginaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />"
    
    <Button
        android:id="@+id/btn_linkaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_loginaccount"
        android:layout_centerVertical="true"
          />
    
    
</RelativeLayout>
